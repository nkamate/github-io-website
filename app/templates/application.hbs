<div id="profile-page-header" class="card nav-bar-fixed" style="margin:0">
    <div class="card-image waves-effect waves-block waves-light">
        <img src="images/user-profile-bg.jpg" alt="user background">
    </div>
    <figure class="card-profile-image">
        <img src="images/avatar.jpg" alt="profile image" class="circle z-depth-2 responsive-img activator ">
    </figure>

    <nav role="navigation">
        <div class="nav-wrapper">
            <div class="brand-logo right right-on-med-and-down" style="left: 170px; width: 300px;">Nitin Kamate</div>

            <ul class="right hide-on-med-and-down">
                <li>
                  {{#link-to "profile" tagName="li"}}
                      <a href={{view.href}}>Resume</a>
                  {{/link-to}}
                </li>
                <li>
                  {{#link-to "about" tagName="li"}}
                      <a href={{view.href}}>Contact</a>
                  {{/link-to}}
                </li>
                <li>
                  {{#link-to "blog" tagName="li"}}
                      <a href={{view.href}}>Blog</a>
                  {{/link-to}}
                </li>
            </ul>

            <ul id="nav-mobile" class="side-nav black-text" style="left: -100px;">
                <li>{{#link-to 'profile' class="black-text"}}Resume{{/link-to}}</li>
                <li>{{#link-to 'about' class="black-text"}}Contact{{/link-to}}</li>
                <li>{{#link-to 'blog' class="black-text"}}Blog{{/link-to}}</li>
            </ul>
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i
                    class="material-icons">menu</i></a>
        </div>
    </nav>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large text-red">
        <i class="large material-icons">perm_phone_msg</i>
    </a>
    <ul>
        <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
        <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
        <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
        <li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>
        <li><a class="btn-floating blue"><i class="fa fa-camera-retro fa-lg"></i></a></li>
    </ul>
</div>

